


<div class="jumbotron">
  <h4 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %> 
  </h4>


  <p class="lead">
    <%= @friend.email %> -
    <%= @friend.phone %> -
    <%= @friend.twitter %>
  </p>
  <hr class="my-4">
  
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>

  <%= link_to "Back to friends", friends_path, class:"btn btn-primary" %>

  <%= link_to "Delete this friend", @friend, method: :delete, class:"btn btn-light", data: { confirm: 'Are you sure?' }  %>

</div>
